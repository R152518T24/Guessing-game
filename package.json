{
  "name": "guessing-game",
  "version": "1.0.0",
  "description": "Multiplayer guessing game",
  "main": "server/src/server.js",
  "scripts": {
    "postinstall": "npm run install-client && npm run install-server && npm run build-client",
    "install-client": "cd client && npm install --include=dev",
    "install-server": "cd server && npm install",
    "build-client": "cd client && npm run build",
    "start": "cd server && node src/server.js",
    "dev": "concurrently \"cd client && npm run dev\" \"cd server && npm run dev\""
  },
  "keywords": [
    "game",
    "multiplayer",
    "socket.io"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
